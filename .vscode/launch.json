    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/scheduler.js",
            "autoAttachChildProcesses": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test Harness",
            "program": "${workspaceRoot}/test-harness.js",
            "stopOnEntry": true,
            "console": "integratedTerminal"
        },
        {
			"type": "node",
			"request": "attach",
			"name": "Attach to kh-scheduler.js",
            "processId": "${command:PickProcess}"
		}
    ]
}